         @model Message
@{
	ViewData["Title"] = "Inbox";
	Layout = "~/Views/Loyout/Index.cshtml";
}
<input type="hidden" asp-for="MessageId" />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Gelen Mesaj Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<b>Gönderen: @Model.NameSurname </b><br />
							<b>Email: @Model.Email</b><br />
							<b> Tarih: @Model.SenDate</b>
							<br />
							<br />
								<b>Mesaj:</b>: @Model.MessageDetail

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>





