@model List<MyPortfolioUdemy.DAL.Entities.Testimonial>
<div class="s-testimonials">

    <div class="overlay"></div>

    <div class="row testimonials-header">
        <div class="col-full">
            <h1 class="h02">Referanslarımız</h1>
        </div>
    </div>

    <div class="row testimonials">

        <div class="col-full testimonials__slider">
            @foreach (var item in Model)
            {
                <div class="testimonials__slide">
                    <img src="@item.İmageUrl" alt="Author image" class="testimonials__avatar">
                    <p>
                       @item.Description
                    </p>
                    <div class="testimonials__author h06">
                        @item.NameSurname
                        @* <span>CEO, Apple</span> *@ <!-- Unvan Alanı Yeri Gelince Eklersin..-->
                    </div>
                </div>
            }
           

        </div> <!-- end testimonials__slider -->

    </div> <!-- end testimonials -->

</div>